###Source: https://gitlab.com/nvidia/container-images/cuda/-/blob/master/dist/11.5.0/ubi8/base/cuda.repo-x86_64
ARG IMAGE_NAME
#FROM ${IMAGE_NAME}:11.5.2-base-ubi8 as base
FROM quay.io/rhcsdel/universal-developer-image:11.5.2-base-ubi8 as base

###added
USER root

ENV NV_CUDA_LIB_VERSION 11.5.2-1

FROM base as base-amd64

ENV NV_NVTX_VERSION 11.5.114-1
ENV NV_LIBNPP_VERSION 11.5.1.107-1
ENV NV_LIBNPP_PACKAGE libnpp-11-5-${NV_LIBNPP_VERSION}
ENV NV_LIBCUBLAS_VERSION 11.7.4.6-1
ENV NV_LIBNCCL_PACKAGE_NAME libnccl
ENV NV_LIBNCCL_PACKAGE_VERSION 2.11.4-1
ENV NV_LIBNCCL_VERSION 2.11.4
ENV NCCL_VERSION 2.11.4
ENV NV_LIBNCCL_PACKAGE ${NV_LIBNCCL_PACKAGE_NAME}-${NV_LIBNCCL_PACKAGE_VERSION}+cuda11.5
FROM base as base-arm64

ENV NV_NVTX_VERSION 11.5.114-1
ENV NV_LIBNPP_VERSION 11.5.1.107-1
ENV NV_LIBNPP_PACKAGE libnpp-11-5-${NV_LIBNPP_VERSION}
ENV NV_LIBCUBLAS_VERSION 11.7.4.6-1
ENV NV_LIBNCCL_PACKAGE_NAME libnccl
ENV NV_LIBNCCL_PACKAGE_VERSION 2.11.4-1
ENV NV_LIBNCCL_VERSION 2.11.4
ENV NCCL_VERSION 2.11.4
ENV NV_LIBNCCL_PACKAGE ${NV_LIBNCCL_PACKAGE_NAME}-${NV_LIBNCCL_PACKAGE_VERSION}+cuda11.5
FROM base as base-ppc64le

ENV NV_NVTX_VERSION 11.5.114-1
ENV NV_LIBNPP_VERSION 11.5.1.107-1
ENV NV_LIBNPP_PACKAGE libnpp-11-5-${NV_LIBNPP_VERSION}
ENV NV_LIBCUBLAS_VERSION 11.7.4.6-1
ENV NV_LIBNCCL_PACKAGE_NAME libnccl
ENV NV_LIBNCCL_PACKAGE_VERSION 2.11.4-1
ENV NV_LIBNCCL_VERSION 2.11.4
ENV NCCL_VERSION 2.11.4
ENV NV_LIBNCCL_PACKAGE ${NV_LIBNCCL_PACKAGE_NAME}-${NV_LIBNCCL_PACKAGE_VERSION}+cuda11.5

FROM base-${TARGETARCH}

ARG TARGETARCH

LABEL maintainer "NVIDIA CORPORATION <sw-cuda-installer@nvidia.com>"

RUN yum install -y \
    cuda-libraries-11-5-${NV_CUDA_LIB_VERSION} \
    cuda-nvtx-11-5-${NV_NVTX_VERSION} \
    ${NV_LIBNPP_PACKAGE} \
    libcublas-11-5-${NV_LIBCUBLAS_VERSION} \
    ${NV_LIBNCCL_PACKAGE} \
    && yum clean all \
    && rm -rf /var/cache/yum/*

###added
USER 1001
